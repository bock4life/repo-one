<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             android:layout_gravity="center_horizontal"
                                             android:orientation="vertical">

    <EditText
        android:id="@+id/frag_trans_qty_et"
        android:layout_width="87dp"
        android:layout_height="62dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/frag_trans_plus_btn"
        android:layout_width="63dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="@+id/frag_trans_qty_et"
        app:layout_constraintLeft_toRightOf="@+id/frag_trans_qty_et"
        app:layout_constraintTop_toTopOf="@+id/frag_trans_qty_et"/>

    <Button
        android:id="@+id/frag_trans_minus_btn"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="-1"
        app:layout_constraintBottom_toBottomOf="@+id/frag_trans_qty_et"
        app:layout_constraintRight_toLeftOf="@+id/frag_trans_qty_et"
        app:layout_constraintTop_toTopOf="@+id/frag_trans_qty_et"/>

    <ImageButton
        android:id="@+id/frag_trans_save_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_trans_qty_et"
        app:layout_constraintVertical_bias="0.504"
        app:srcCompat="@android:drawable/ic_menu_save"/>

</android.support.constraint.ConstraintLayout>